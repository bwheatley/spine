#
# Any 64bit OS generic stuff we want included, regardless of distro
#
[% IF c_arch=^x86[-_]64$; %]
platform/linux/64bit
[% END %]
#
# AS4 specific stuff
#
[% IF c_distro=^AS4; %]
[%     MATCH c_distro_name=CentOS; %]
platform/linux/CentOS4
[%     END %]
[% END %]
#
# AS5 specific stuff
#
[% MATCH c_distro=^AS5; %]
[%     MATCH c_distro_name=CentOS; %]
platform/linux/Cent5
[%     END %]
[% END %]
