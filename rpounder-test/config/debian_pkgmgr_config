  - Report: Default
  - Remove: APT
  - Update: APT 
  - Install: APT
# Any overides for the default config
plugin_config:
  APT:
    state_dir: /var/lib/apt
  RPM:
# The method used to build the
# information of what to install
package_config:
  implementer: basic
  install-key: packages
