#%YAML 1.0
# The order to run through the sections
order:
  - Init:
    - APT
    - DEB
  - Lookup: DEB
  - CalcMissing: Default
  - ResolveInstalled: DEB
  - ResolveMissing: APT
  - CalcRemove: Default
